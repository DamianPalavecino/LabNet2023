﻿@model List<Lab.EF.MVC.Models.EmployeeView>


@{
    ViewBag.Title = "Employees Page";
}

<h1>Empleados</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Titulo</th>
            <th scope="col">Eliminar</th>
            <th scope="col">Modificar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Nombre</td>
                <td>@employee.Apellido</td>
                <td>@employee.Titulo</td>
                <td>@Html.ActionLink("Borrar", "Delete", new { id = employee.Id }, new { onclick = "return confirm('¿Deseas borrar este empleado?')" })</td>
                <td>@Html.ActionLink("Editar", "Edit", new { id = employee.Id })</td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Agregar nuevo empleado", "Insert")
</div>